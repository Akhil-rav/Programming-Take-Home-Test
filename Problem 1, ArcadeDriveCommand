package frc.robot.commands;

import edu.wpi.first.wpilibj.GenericHID;
import edu.wpi.first.wpilibj2.command.CommandBase;
import frc.robot.subsystems.ArcadeDriveSubsystem;

public class ArcadeDriveCommand extends CommandBase {
    private ArcadeDriveSubsystem drive;
    private GenericHID stick;

    public ArcadeDriveCommand(ArcadeDriveSubsystem driveSubsystem, GenericHID joystick) {
        drive = driveSubsystem;
        stick = joystick;
        addRequirements(driveSubsystem);
    }

    @Override
    public void execute() {
        double forward = -stick.getRawAxis(1);
        double turn = stick.getRawAxis(0);
        drive.arcadeDrive(forward, turn);
    }

    @Override
    public void end(boolean interrupted) {
        drive.stop();
    }

    @Override
    public boolean isFinished() {
        return false;
    }
}
